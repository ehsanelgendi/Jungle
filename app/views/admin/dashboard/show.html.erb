<header class="page-header">
  <h1>Admin Dashboard Statistics</h1>
</header>

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-3">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">Number of all products</h5>
        <p class="card-text"><%= @products_count %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">Number of all categories</h5>
        <p class="card-text"><%= @categories_count %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-3"></div>
</div>
<br /><br />

<div class="text-center">
  <%= link_to '<button type="button" class="btn btn-success">View All Products</button>'.html_safe, admin_products_path %>
</div>
